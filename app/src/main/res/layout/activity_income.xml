<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#070000"
    android:padding="16dp"
    tools:context=".income">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Add Income"
        android:textColor="#00D09E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount (Rs)"
        android:textColor="#0B0000"
        android:textColorLink="#090000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/income_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter amount"
        android:inputType="numberDecimal"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/income_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:outlineSpotShadowColor="#050000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#070000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/income_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Select date"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/income_notes_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="top|start"
        android:hint="Add notes (optional)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:textColor="#0B0000" />

    <Button
        android:id="@+id/save_income_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00D09E"
        android:text="Save Income"
        android:textColor="#FFFFFF" />

</LinearLayout>